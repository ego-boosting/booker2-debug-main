<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>


      <% if current_user.following?(@user) %>
        <%= link_to "フォローを外す", user_relationships_path(@user.id), class: "btn btn-info", method: :delete %>

      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), class: "btn btn-success", method: :post %>
      <% end %>


      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>

          <td>
            <% if @book.favorited_by?(current_user) %>
              <p>
              <%= link_to book_favorites_path(@book), method: :delete do %>
               <span class="text-danger">♥<%= @book.favorites.count %></span>
              <% end %>
              </p>
            <% else %>
              <p>
              <%= link_to book_favorites_path(@book), method: :post do %>
                ♥<%= @book.favorites.count %>
              <% end %>
              </p>
            <% end %>
          </td>

          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>

      <div>
        <p>コメント件数：<%= @book.book_comments.count %></p>
        <% @book.book_comments.each do |book_comment| %>
          <p><%= image_tag book_comment.user.get_profile_image,size:"100x100" %>
            <%= book_comment.user.name %>
            <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
          </p>
        <% end %>
      </div>

      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, class: "form-control", rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>

    </div>
  </div>
</div>